---
interface Props {
  ref: string;
}

const { ref } = Astro.props;
---

<a
  class="rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-1 px-2 text-xs lg:text-base lg:py-2 lg:px-4 bg-white/5 hover:scale-105 hover:bg-white/10 transition"
  href={ref}
  target="_blank"
  rel="nonopener"
>
  <slot />
</a>
